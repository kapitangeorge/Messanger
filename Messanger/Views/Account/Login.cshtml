@model Messanger.Data.ViewModels.LoginViewModel

<h2 style="text-align:center;">Вход в приложение</h2>

<form method="post" asp-controller="Account" asp-action="Login" style="text-align:center;">
    <div asp-validation-summary="ModelOnly"></div>
    <div>
        <label asp-for="Email"></label><br />
        <input asp-for="Email" />
        <span asp-validation-for="Email"></span>
    </div>
    <div>
        <label asp-for="Password"></label><br />
        <input asp-for="Password" />
        <span asp-validation-for="Password"></span>
    </div>
    <div>
        <label asp-for="RememberMe"></label><br />
        <input asp-for="RememberMe" />
    </div>
    <div>
        <input class="btn btn-danger" type="submit" value="Войти" />
        <a class="btn btn-danger" href="Account/Register">Регистрация</a>
    </div>
    
</form>